# Book represents the model containing an ID, title and author
type Book {

	# ID of the book
	id: ID
	
	# Title of the book
	title: String
	
	# Author of the book
	author: String
}

# Create or delete a book
input BookInput {

	# Title of the book
	title: String!
	
	# Author of the book
	author: String!
}
